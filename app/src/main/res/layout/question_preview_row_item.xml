<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_selector"
    android:clickable="false">

    <EditText
        android:id="@+id/etQuestionPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_round_corners"
        android:hint="question preview"
        android:inputType="textMultiLine"
        android:lines="3"
        android:text="Is it sunny outside?"
        app:layout_constraintBottom_toTopOf="@+id/etAnswerPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/etAnswerPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_round_corners"
        android:gravity="start|top"
        android:hint="answer preview"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="15"
        android:text="Depends on the time."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQuestionPreview" />

</android.support.constraint.ConstraintLayout>